<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="@dimen/list_item_image_size"
            android:layout_height="@dimen/list_item_image_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/list_item_margin_small"
            android:layout_marginStart="@dimen/list_item_margin_large"
            android:layout_marginBottom="@dimen/list_item_margin_small"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/productTitleTextView"
            style="@style/ListItemTitleStyle"
            android:layout_width="@dimen/list_item_default_width"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/productImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/list_item_margin_small"
            tools:text="Iphone 7 64GB Nuevo - Gold."/>

        <TextView
            android:id="@+id/productPriceTextView"
            style="@style/ListItemPriceStyle"
            android:layout_width="@dimen/list_item_default_width"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/productImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productTitleTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/list_item_margin_small"
            android:layout_marginTop="@dimen/list_item_margin_large"
            tools:text="$499"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>